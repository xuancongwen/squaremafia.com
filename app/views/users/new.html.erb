<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Join</h3>
      </div>
      <div class="panel-body">
        <%= form_for(User.new, html: {class: 'form-horizontal'}) do |f| %>
            <div class="form-group">
              <%= f.label(:name, {class: 'control-label col-sm-2'}) %>
              <div class="col-sm-10">
                <%= f.text_field(:name, class: 'form-control') %>
                <span class="help-block">Use your real name. It will be listed in the directory.</span>
              </div>
            </div>
            <div class="form-group">
              <%= f.label(:email, {class: 'control-label col-sm-2'}) %>
              <div class="col-sm-10">
                <%= f.text_field(:email, class: 'form-control', type: 'email') %>
                <span class="help-block">Will be listed in the directory, receive mailing list traffic, and site communications.</span>
              </div>
            </div>
            <div class="form-group">
              <%= f.label(:phone, {class: 'control-label col-sm-2'}) %>
              <div class="col-sm-10">
                <%= f.text_field(:phone, class: 'form-control', placeholder: '+1 415-555-5555') %>
                <span class="help-block">Optional. Listed in the directory.</span>
              </div>
            </div>
            <div class="form-group">
              <%= f.label(:password, {class: 'control-label col-sm-2'}) %>
              <div class="col-sm-10">
                <%= f.password_field(:password, class: 'form-control') %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label(:password_confirmation, {class: 'control-label col-sm-2'}) %>
              <div class="col-sm-10">
                <%= f.password_field(:password_confirmation, class: 'form-control') %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2">
                <%= recaptcha_tags %>
              </div>
            </div>
            <div class="form-group">
              <%= f.submit(class: 'btn btn-default col-sm-offset-2') %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>